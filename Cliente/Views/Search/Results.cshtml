@using Microsoft.AspNetCore.Http

@model IEnumerable<Cliente.Models.VMs.MatchViewModel>

@{
    ViewData["Title"] = "Resultados de búsqueda";
}

<div class="row">
    <div class="col-12 granite text-light py-5">
        <h1>Resultados de búsqueda</h1>
        <p>Estos son los partidos que coinciden para la búsqueda</p>
    </div>

    <div class="col-lg-6 granite p-3 text-white">
        <form class="d-flex flex-column justify-content-center" method="post">
            <div class="form-group">
                <input type="text" class="form-control" id="query" placeholder="Ingresa el término de búsqueda...">
            </div>
            <input class="btn btn-outline-light btn-block" type="submit" value="Buscar" />
        </form>
        <form class="d-flex flex-column justify-content-center" asp-controller="Search" asp-action="ByGroup">
            <div class="form-group py-1">
                <select name="name" class="form-select form-control-lg d-block py-1" aria-label="Default select example">
                    <option selected>Seleccioná un grupo</option>
                </select>
                <input class="btn btn-outline-light btn-block" type="submit" value="Buscar" />
            </div>
        </form>
    </div>

    <div class="col-lg-6 granite text-center">
        <figure>
            <img src="~/img/logo.svg" class="img-fluid rounded" />
        </figure>
    </div>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 my-3">
            <div class="card granite text-light">
                <div class="card-body">
                    <h5 class="card-title">Partido @item.matchDate</h5>
                    <h6>@item.homeId VS @item.awayId</h6>
                    <a href="#" class="card-link">Más información</a>
                    <a href="#" class="card-link">Apostar</a>
                </div>
            </div>
        </div>
    }
</div>