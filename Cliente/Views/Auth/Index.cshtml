 
@{
    ViewData["Title"] = " Bienvenido";
}

<section class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-4 mt-3 mb-2 d-flex flex-column justify-content-center text-center" >
            <img class="img-fluid" style="height: 150px" src="~/img/logo.svg" alt="Logo del mundial Qatar 2022" />
            <h1>¡Bienvenido!</h1>
            <p>¡Ingresá al sistema de apuestas y empezá a participar!</p>
            <div>
                <a type="button" class="btn btn-outline-primary btn-block" asp-controller="Auth" asp-action="Login">Ingresar</a>
                <a type="button" class="btn btn-outline-dark btn-block" asp-controller="Auth" asp-action="SignUp" disabled>Registrarse</a>
            </div>
        </div>
    </div> 
</section>

