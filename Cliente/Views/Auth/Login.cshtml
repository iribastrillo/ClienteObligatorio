
@{
    ViewData["Title"] = "Login";
}

<section class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-4 d-flex flex-column justify-content-center mb-3 mt-3 text-center">
            <img class="img-fluid" style="height: 150px" src="~/img/logo.svg" alt="Logo del mundial Qatar 2022" />
            <h1>¡Ingresá!</h1>
            <form method="post">
                <div class="form-group">
                    <label for="username">Usuario:</label>
                    <input name="username" type="text" class="form-control" id="username_id" placeholder="Ingresa tu nombre de usuario">
                    <small id="usernameHelp" class="form-text text-muted">Es el nombre de usuario con el que te registraste ;)</small>
                </div>
                <div class="form-group">
                    <label for="password">Contraseña:</label>
                    <input name="password" type="password" class="form-control" id="password_id" placeholder="Ingresa tu contraseña">
                    <small id="passwordHelp" class="form-text text-muted">No olvides respetar mayúsculas y minúsculas</small>
                </div>
                <div class="form-group d-block">
                    <select name="role" class="form-select form-control">
                        @foreach (var rol in ViewBag.Roles)
                        {
                            <option value="@rol.Id">@rol.descriptor</option>
                        }
                    </select>
                </div>
                <span class="text-danger">@ViewBag.ErrorMessage</span>
                <button type="submit" class="btn btn-outline-dark btn-block">Ingresar</button>
            </form>
        </div>
    </div>  
</section>