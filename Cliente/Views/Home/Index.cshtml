@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Home";
}

<div class="row">
    <h1 class="py-3 m-0 text-light col-12 granite">¡Bienvenido,  @Context.Session.GetString("username")!</h1>
    <form class="col-lg-6 granite p-3 text-white">
        <div class="form-group">
            <input type="text" class="form-control" id="query" placeholder="Ingresa el término de búsqueda...">
        </div>
        <div class="form-group">
            <div class="form-check-inline">
                <input class="form-check-input" type="radio" name="search_type" id="search_group" value="grupo" checked>
                <label class="form-check-label" for="search_group">
                    Por grupo
                </label>
            </div>
            <div class="form-check-inline">
                <input class="form-check-input" type="radio" name="search_type" id="search_country" value="pais">
                <label class="form-check-label" for="search_type">
                    Por selección
                </label>
            </div>
        </div>
        <input class="btn btn-outline-light btn-block" type="submit" value="Buscar" />
    </form>
    <div class="col-lg-6 granite text-center">
        <figure>
            <img src="~/img/logo.svg" class="img-fluid rounded" />
        </figure>
    </div>
</div>

<div class="row">
    @foreach (var item in ViewBag.Groups)
    {
        <div class="col-lg-3 my-3">
            <div class="card granite text-light">
                <div class="card-body">
                    <h5 class="card-title">@item.group</h5>
                    @foreach (var nt in item.nationalTeams)
                    {
                        <h6>@nt.name</h6>
                    }
                    <a href="#" class="card-link">Más información</a>
                    <a href="#" class="card-link">Apostar</a>
                </div>
            </div>
        </div>
    }

</div>
