@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Home";
}

<div class="row">
    <div class="col-12 granite text-light py-5">
        <h1>¡Bienvenido,  @Context.Session.GetString("username")!</h1>
        <p>¡Buscá un partido, poné tu apuesta y ganá!</p>
    </div>

    <div class="col-lg-6 granite p-5 text-white">
        <!-- Búsqueda por ISO o nombre de selección -->
        <form class="d-flex flex-column justify-content-center" method="post" asp-controller="Search" asp-action="ByIso">
            <div class="form-group row">
                <input type="text" class="col-12 form-control form-control-lg" id="query" name="query" placeholder="Ingrese código ISO-Alfa3">
                <input class="btn btn-outline-light btn-block" type="submit" value="Buscar" />
            </div>
        </form>
        <!-- Búsqueda por nombre de grupo -->
        <form class="d-flex flex-column justify-content-center" asp-controller="Search" asp-action="ByGroup">
            <div class="form-group py-1 row">
                <select name="name" class="form-select form-control-lg d-block py-1 col-12" aria-label="Default select example">
                    <option selected>Seleccioná un grupo</option>
                    @foreach (var item in ViewBag.Groups)
                    {
                        <option value="@item.group">@item.group</option>
                    }
                </select>
                <input class="btn btn-outline-light btn-block" type="submit" value="Buscar" />
            </div>
        </form>
        <!-- Búsqueda entre dos fechas -->
        <form class="d-flex flex-column justify-content-center" asp-controller="Search" asp-action="BetweenDates">
            <div class="form-group py-1 row">
                <select name="name" class="form-select form-control-lg d-block py-1 col-12" aria-label="Default select example">
                    <option selected>Seleccioná un grupo</option>
                    @foreach (var item in ViewBag.Groups)
                    {
                        <option value="@item.group">@item.group</option>
                    }
                </select>
                <input class="btn btn-outline-light btn-block" type="submit" value="Buscar" />
            </div>
        </form>
    </div>

    <div class="col-lg-6 granite text-center">
        <figure>
            <img src="~/img/logo.svg" class="img-fluid rounded" />
        </figure>
    </div>
</div>

<div class="row">
    @foreach (var item in ViewBag.Groups)
    {
        <div class="col-lg-3 my-3">
            <div class="card granite text-light">
                <div class="card-body">
                    <h5 class="card-title">GRUPO @item.group</h5>
                    @foreach (var nt in item.nationalTeams)
                    {
                        <h6>@nt.name</h6>
                    }
                    <a href="#" class="card-link">Más información</a>
                    <a href="#" class="card-link">Apostar</a>
                </div>
            </div>
        </div>
    }
</div>
