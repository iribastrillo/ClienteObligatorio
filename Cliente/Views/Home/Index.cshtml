@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Home";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="display-4">¡Bienvenido, @Context.Session.GetString("username")!</h1>
        <figure>
            <img src="~/img/bg.webp" class="img-fluid rounded" />
        </figure>
    </div>
    <div class="col-lg-12">
        <form>
            <div class="form-group row m-0 d-flex justify-content-between">
                <input type="text" class="form-control col-lg-10" id="query" placeholder="Ingresa el término de búsqueda...">
                <input class="btn btn-outline-primary col-lg-1" type="submit" value="Buscar" />
            </div>
            <div class="form-group">
                <div class="form-check-inline">
                    <input class="form-check-input" type="radio" name="search_type" id="search_group" value="grupo" checked>
                    <label class="form-check-label" for="search_group">
                        Por grupo
                    </label>
                </div>
                <div class="form-check-inline">
                    <input class="form-check-input" type="radio" name="search_type" id="search_country" value="pais">
                    <label class="form-check-label" for="search_type">
                        Por selección
                    </label>
                </div>
            </div>
        </form>
    </div>
    <div class="col-lg-12">
        <div class="row m-0">

            @foreach (var item in ViewBag.Response)
            {
            <div class="col-lg-3">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">@item.name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.country.isoAlfa3</h6>
                        <p class="card-text">Descripción del país...</p>
                        <a href="#" class="card-link">Más información</a>
                        <a href="#" class="card-link">Apostar</a>
                    </div>
                </div>
            </div>
                    }
         </div>
    </div>
</div>
