@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Admin";
}

<div class="row">
    <div class="col-12 granite text-light py-5">
        <h1>¡Bienvenido,  @Context.Session.GetString("username")!</h1>
        <p>¡Buscá, editá y crea contenido para apostadores!</p>
    </div>

    <div class="col-lg-8 granite p-3 text-white">
        <form class="d-flex flex-column justify-content-center" method="post">
            <div class="form-group">
                <input type="text" class="form-control" id="query" placeholder="Ingresa el término de búsqueda...">
            </div>
            <input class="btn btn-outline-light btn-block" type="submit" value="Buscar" />
        </form>
        <form class="d-flex flex-column justify-content-center" asp-controller="Search" asp-action="ByGroup">
            <div class="form-group py-1">
                <select name="name" class="form-select form-control-lg d-block py-1" aria-label="Default select example">
                    <option selected>Seleccioná un grupo</option>
                    @foreach (var item in ViewBag.Groups)
                    {
                        <option value="@item.group">@item.group</option>
                    }
                </select>
                <input class="btn btn-outline-light btn-block" type="submit" value="Buscar" />
            </div>
        </form>
    </div>

    <div class="col-lg-4 granite text-center">
        <figure>
            <img src="~/img/logo.svg" class="img-fluid rounded" />
        </figure>
    </div>
</div>
